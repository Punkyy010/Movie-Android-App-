<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivMovieIcon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:paddingHorizontal="5dp"/>

        <TextView
            android:id="@+id/tvMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivMovieIcon"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>

        <RatingBar
            android:id="@+id/rbmovieRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingHorizontal="5dp"
            android:layout_toRightOf="@id/ivMovieIcon"
            android:layout_below="@id/tvMovieName"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"/>
        <TextView
            android:id="@+id/tv_movieGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:layout_toRightOf="@id/ivMovieIcon"
            android:layout_below="@id/rbmovieRating"
            />
        <TextView
            android:id="@+id/tv_movieYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_movieGenre"
            android:layout_below="@id/rbmovieRating"
            />

        <CheckBox
            android:id="@+id/checkRemember"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="300dp"
            android:button="@drawable/check_selector"
            android:layout_marginTop="30dp"
            android:visibility="visible" />


    </RelativeLayout>

</android.support.v7.widget.CardView>